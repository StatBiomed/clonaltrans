{
    "name": "CordBloodConstRates",
    "logger_config_path": "/ssd/users/mingzegao/clonaltrans/clonaltrans/config/logger_config.json",

    "system": {
        "gpu_id": 0,
        "seed": 42
    },
    
    "arch": {
        "type": "ODEBlock",
        "args": {
