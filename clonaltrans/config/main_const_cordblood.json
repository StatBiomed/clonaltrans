        "scaling_factor": [1, 5.3521, 581.8464, 634.0689],
        "ub_for_prol": 6,
        "ub_for_diff": 6
    },    

    "optimizer": {
        "learning_rate": 0.05,
        "lrs_ms": [200, 400, 600, 800, 1000]
    },

    "data_loader": {
        "type": "ClonalTransDataLoader",
        "args":{
            "data_dir": "/ssd/users/mingzegao/clonaltrans/datasets/CordBlood/data",
            "num_populations": 11,
            "annots": "annotations.csv",
            "graphs": "graph_table.csv",
            "day_zero": "initial_condition.csv",
